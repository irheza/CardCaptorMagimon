<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tekmob.cardcaptormagimon.SealedPage" >

    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
    	android:background="@drawable/card" >
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <RelativeLayout 
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	    	android:layout_weight="2" >
		    <TextView
		        android:id="@+id/success"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:textColor="@color/light_white"
		        android:textSize="30sp"
		        android:text="@string/magimon" />
	    </RelativeLayout>
        
        <RelativeLayout 
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="20dp"
	    	android:layout_weight="1" >
		    
            <RelativeLayout 
                android:layout_height="match_parent"
	        	android:layout_width="match_parent"
	        	android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
	        	android:background="@drawable/training_bg_stars_cover" ></RelativeLayout>
            
		    <ImageView
		        android:id="@+id/magimon"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_margin="30dp" />
		    
	    </RelativeLayout>
	    
        <LinearLayout 
	    	android:layout_weight="2"
       		android:orientation="vertical"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent" >
		    
            <RelativeLayout 
		        android:layout_height="match_parent"
		        android:layout_width="match_parent"
		        android:layout_weight="1" >
		        <ImageView
			        android:id="@+id/attack_pic"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:scaleType="fitCenter"
			        android:src="@drawable/attack" />
		        <TextView
			        android:id="@+id/attack"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:textColor="@color/light_white"
			        android:textSize="20sp"
			        android:text="@string/magimon" />
	        </RelativeLayout>
	        
	        <RelativeLayout
		        android:layout_height="match_parent"
		        android:layout_width="match_parent"
		        android:layout_weight="1" >
		        <ImageView
			        android:id="@+id/defend_pic"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:scaleType="fitCenter"
			        android:src="@drawable/defend" />
		        <TextView
			        android:id="@+id/defend"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:textColor="@color/light_white"
			        android:textSize="20sp"
			        android:text="@string/magimon" />
	        </RelativeLayout>
	    
    	</LinearLayout>
        
	    <LinearLayout 
	    	android:layout_weight="2"
       		android:orientation="horizontal"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent" >
		    
	        <ImageButton
		 	    android:id="@+id/menu"
		 	    android:layout_width="match_parent"
		 	    android:layout_height="match_parent"
		 	    android:scaleType="fitCenter"
		 	    android:clickable="true"
		 	    android:layout_marginLeft="50dp"
		 	    android:layout_marginRight="10dp"
		 	    android:background="@null"
   				android:layout_weight="1"
		 	    android:src="@drawable/button_sealed_mainmenu" />
	        
			<ImageButton
		 	    android:id="@+id/peta"
		 	    android:layout_width="match_parent"
		 	    android:layout_height="match_parent"
		 	    android:scaleType="fitCenter"
		 	    android:clickable="true"
		 	    android:layout_marginRight="50dp"
		 	    android:layout_marginLeft="10dp"
		 	    android:background="@null"
   				android:layout_weight="1"
		 	    android:src="@drawable/button_sealed_map" />
	    
    	</LinearLayout>
	
	</LinearLayout>
	
   	<LinearLayout 
   	    android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
   	    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		    	android:layout_weight="1" />
   	    
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	    	android:layout_weight="1"
        	android:orientation="vertical" >
        
	   	    <ImageView
		        android:id="@+id/sign_top"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		    	android:layout_weight="1"
		    	android:layout_marginTop="20dp"
		        android:scaleType="fitCenter"
		        android:src="@drawable/get" />
	   	    
	   	    <ImageView
		        android:id="@+id/sign_bottom"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		    	android:layout_weight="1"
		    	android:layout_marginBottom="20dp"
		        android:scaleType="fitCenter"
		        android:src="@drawable/magimon" />
   	    </LinearLayout>
   	    
   	    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		    	android:layout_weight="1" />
   	    
 	</LinearLayout>
 
</RelativeLayout>